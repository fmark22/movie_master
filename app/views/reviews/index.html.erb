<div class="reviews">
    <div class="reviews-head">
        <h1>리뷰</h1>
        <!--리뷰번호, 제목, 내용, 평점-->
    </div>
    
    <hr/>
    총 <strong>45</strong>개
     <%= link_to "리뷰쓰기", new_review_path %>
    <hr/>

<!--반복문-->
      <% @review.each do |review| %>
        <div class="review">
          리뷰번호: <%= review.id %> <br/>
          제목 :  <%= link_to review.title, review_path(review.id) %>  | 
          평점: <%= review.ratio %> | 
          <%= link_to "수정", edit_review_path(review.id) %> 
          <%= link_to "삭제", review_path(review.id), method: :delete, data: {confirm: '지우기' } %>
          
          <hr/>
      <% end %>
      
      
</div>

